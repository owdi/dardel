{% extends 'admin.html.twig' %}

{% block title %} Caractéristiques {% endblock %}

{% block body %}

    <div class="admin_sub_menu">
      <ul>
        <li><a href="#" id="addCategoryForm">Ajouter une catégorie</a></li>
        <li><a href="#" id="showCategoryList">Voir la liste des catégorie</a></li>
        </ul>
    </div>

    <div id="category_form" >
        <h2>Ajouter une nouvelle categorie</h2>
        <div {%if error =='true' %} class ="error" {% else %}class="info"{% endif %}>{{message}}</div>
        <form method="post" action="category.php" id="addCategory">
            <label for="language">Langue :</label>
            <select name="language" id="language" >
                {% for key, languageItem in language %}
                    <option value="{{ languageItem.language_id }}">{{ languageItem.language }}</option>
                {% endfor %}
            </select>
            <br/>
            <label for="category_title">Titre categorie <span class="required">*</span>:</label>
            <input type="text" value="" name="category_title" id="category_title" placeholder="Entrez le titre de la categorie"/>
            <br/>
            <p class"legend">* Les champs sont obligatoires</p>
            <input type="submit" value="Valider" name="addCategory"/>
        </form>
    </div>

    <div id="category_list" style="display:none;">
        <h2>Liste des catégories</h2>
        <table>
            <tr>
                <th>Titre</th>
                <th>Langue</th>
            </tr>                
            {% for key, categoryListItem in category_list %}
            <tr>                
                <td>{{categoryListItem.category_title}}</td>
                <td>{{categoryListItem.language}}</td>                        
            </tr>
            {% endfor %}
        </table>
    </div>

{% endblock %}